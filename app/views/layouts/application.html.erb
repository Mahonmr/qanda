  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag('/qanda_type_cropped.jpg', style: "max-height: 100px; max-width: 100px; position: relative; top: -8px;"), "/", class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <%= "Signed in as #{current_user.full_name}" %>
            <%= link_to "Log Out", destroy_user_session_path, :method => :delete %>
          <% else %>
            <%= link_to "Sign In", user_session_path %>
            <%= link_to "Sign Up", new_user_registration_path %>
          <% end %>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
  <% unless flash.empty? %>
    <div class="container">
      <div class="<%="alert alert-#{flash.keys.first}"%>">
        <%= flash[flash.keys.first] %>
      </div>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
